@model ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>New Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <partial name="_ProductsForm" />
            <div class="form-group">
                <button type="submit" class="btn btn-primary my-1"><i class="fa-solid fa-star"></i> Create</button>
                <a asp-action="Index" class="btn btn-success my-1"><i class="fa-solid fa-chevron-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_ValidationCurrencyPartial");}
    <script type="text/javascript">
        $(".date").datepicker({
            orientation: "bottom",
            uiLibrary: "bootstrap5",
            autoclose: true
        });
    </script>
}