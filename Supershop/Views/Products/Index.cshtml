@model IEnumerable<Supershop.Data.Entities.Product>

@{
    ViewData["Title"] = "Products";
}
<br />
<p>
    <a asp-action="Create" class="btn btn-primary my-1"><i class="fa-solid fa-star"></i> Create New</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Products</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ImageId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastPurchase)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastSale)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsAvailable)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Stock)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
@foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                <img src="@Url.Content(item.ImageFullPath)" alt="Image" style="width:100px;height:150px;max-width:100%;height:auto" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastPurchase)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastSale)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsAvailable)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Stock)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning my-1"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info my-1"><i class="fa-regular fa-file-lines"></i> Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger my-1"><i class="fa-solid fa-trash"></i> Delete</a>
                            </td>
                        </tr>
}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/lib/datatables.net-bs5/dataTables.bootstrap5.min.css" />
}
@section Scripts {
    <script src="~/lib/datatables.net/dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs5/dataTables.bootstrap5.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}