@model IEnumerable<Supershop.Data.Entities.Country>
@{
    ViewData["Title"] = "Countries";
}

<h1>Countries</h1>

<p>
    <a asp-action="Create" class="btn btn-primary my-1"><i class="fa-solid fa-star"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberCities)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberCities)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning my-1"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info my-1"><i class="fa-regular fa-file-lines"></i> Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger my-1"><i class="fa-solid fa-trash"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>