@model RecoverPasswordViewModel
@{
    ViewData["Title"] = "Recover Password";
    if (ViewBag.Error == null) ViewBag.Error = false;
}

<h2>Recover Password</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Recover Password" class="btn btn-primary my-1" />
                <a asp-action="Login" class="btn btn-success my-1"><i class="fa fa-chevron-left"></i> Back to Login</a>
            </div>
        </form>
        <div class="@(ViewBag.Error ? "text-danger" : "text-success")">
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}